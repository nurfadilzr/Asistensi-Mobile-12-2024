<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardCornerRadius="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="150dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/disaster"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="200dp"
        android:text="ril_disaster"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginStart="280dp" />

    <TextView
        android:id="@+id/foles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,3 jt"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/tv_followers"
        android:layout_marginStart="60dp"/>

    <TextView
        android:id="@+id/folis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_below="@id/tv_following"
        android:layout_marginStart="300dp" />

    <TextView
        android:id="@+id/tv_postingan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postingan"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="380dp"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/iv_postingan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/disaster"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tv_postingan"/>

</RelativeLayout>